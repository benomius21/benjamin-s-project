<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="toastError">
        <item name="stTextBold">false</item>
        <item name="stColorBackground">#FF0000</item>
        <item name="stTextSize">20sp</item>
        <item name="stTextColor">#FFFFFF</item>
        <item name="strokeColor">#020202</item>
        <item name="strokeWidth">3dp</item>
        <item name="stLength">SHORT</item>
        <item name="cornerRadius">3dp</item>
    </style>

    <style name="toastOK">
        <item name="stTextBold">false</item>
        <item name="stColorBackground">#0000FF</item>
        <item name="stTextSize">20sp</item>
        <item name="stTextColor">#FFFFFF</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">3dp</item>
        <item name="stLength">SHORT</item>
        <item name="cornerRadius">3dp</item>
    </style>


</resources>
